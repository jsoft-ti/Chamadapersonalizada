<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fotoaluno"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="11dp"
        android:layout_weight="1"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="@+id/nomealuno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomealuno"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginEnd="28dp"
        android:text="Teste"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@+id/fotoaluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoaluno"
        app:layout_constraintTop_toTopOf="@+id/fotoaluno" />

</android.support.constraint.ConstraintLayout>